{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "rules": {
    "no-restricted-globals": "warn",
    "no-tabs": 0,
    "camelcase": 0,
    "eqeqeq": 0,
    "comma-dangle": 0,
    "linebreak-style": 0,
    "import/no-extraneous-dependencies": 0,
    "consistent-return": 0,
    "class-methods-use-this": 0,
    "object-curly-newline": 0,
    "id-length": [1, { "min": 1 }],
    "arrow-parens": "off",
    "max-len": [2, 200, 2, {
      "ignoreUrls": true,
      "ignoreComments": false
    }],
    "import/prefer-default-export": 0,
    "react/jsx-props-no-spreading": 0,
    "react/require-default-props": 0,
    "react/forbid-prop-types": [2, { "forbid": ["any"] }]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["application", "./src/application"],
          ["common", "./src/common"],
          ["pages", "./src/pages"]
        ],
        "extensions": [".jsx", ".js"]
      }
    }
  }
}
